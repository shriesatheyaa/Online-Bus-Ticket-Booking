<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="com.i2i.model.Reservation" table="Reservations">
        <meta attribute="class-description">
            This class contains the Reservation details. 
        </meta>
        <id name="id" type="int" column="Id">
         <generator class="assigned"/>
        </id>
        
        <many-to-one name="user" class="com.i2i.model.User" lazy = "false" fetch="select">
            <column name="User_Id" not-null="false" />
        </many-to-one>
        
        <many-to-one name="tripRoute" class="com.i2i.model.TripRoute" lazy = "false" fetch="select">
            <column name="Trip_Route_Id" not-null="false" />
        </many-to-one>
        
        <property name="noOfSeatsBooked" column="No_Of_Seats_Booked" type="string"/>
        <property name="totalPrice" column="Total_Price" type="double"/>
        <property name="paymentMode" column="Payment_Mode" type="string"/>
        <property name="status" column="Status" type="string"/>        
        
    </class>
</hibernate-mapping>