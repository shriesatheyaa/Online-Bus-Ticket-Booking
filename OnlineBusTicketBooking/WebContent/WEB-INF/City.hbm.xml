<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   
   <class name="model.City" table="Cities">
       <id name="id" type="int" column="Id" >
       <generator class="increment"/> 
       </id>
       <property name="name" column="Name" type="string"/>
       <many-to-one name="createdBy" class="model.User" fetch="select">
           <column name="Created_By" not-null="false" />
       </many-to-one>
       <many-to-one name="modifiedBy" class="model.User" fetch="select">
           <column name="Modified_By" not-null="false" />
       </many-to-one>
       <property name="createdAt" column="Created_At" type ="time" not-null="true"/>
       <property name="modifiedAt" column="Modified_At" type="time" not-null="false"/>
       <set name="sourceCityTrip" table="Trips" 
	    inverse="true" lazy="false" fetch="select" cascade="save-update">
            <key>
                <column name="Source_Id" not-null="false" />
            </key>
            <one-to-many class="model.Trip" />
       </set>
        <set name="destinationCityTrip" table="Trips" 
	    inverse="true" lazy="false" fetch="select" cascade="save-update">
            <key>
                <column name="Destination_Id" not-null="false" />
            </key>
            <one-to-many class="model.Trip" />
       </set>
       
   
   </class>
</hibernate-mapping>