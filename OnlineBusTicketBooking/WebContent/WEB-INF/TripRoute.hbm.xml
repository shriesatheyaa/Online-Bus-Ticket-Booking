<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.Trip" table="Trips">
      <meta attribute="class-description">
         This class contains the trip details of a bus. 
      </meta> 
      <id name="id" type="int" column="Id">
         <generator class="assigned"/>
      </id>  
      
      <property name="departureTime" type="time" column="Departure_Time"/>
      <property name="arrivalTime" type="time" column="Arrival_Time"/>
      <property name="price" type="double" column="Price"/>
      <property name="dateOfTravel" type="date" column="Date_Of_Travel"/>
      <property name="isActive" type="boolean" column="Is_Active"/>
      <property name="createdAt" type="time" column="Created_At"/>
      <property name="modifiedAt" type="time" column="Modified_At"/>
      
        
      <many-to-one name="route" class="model.Route" fetch="select">
            <column name="Route_Id" />
      </many-to-one>
      
      <many-to-one name="trip" class="model.Trip" fetch="select">
            <column name="Trip_Id" />
      </many-to-one>

      <many-to-one name="createdBy" class="model.User" fetch="select">
            <column name="Created_By" />
      </many-to-one>
      
      <many-to-one name="modifiedBy" class="model.User" fetch="select">
            <column name="Modified_By" />
      </many-to-one>
      
   </class>
</hibernate-mapping>
