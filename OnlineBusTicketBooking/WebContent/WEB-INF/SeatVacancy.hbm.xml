<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.SeatVacancy" table="Seat_Vacancies">
      <meta attribute="class-description">
         This class contains the seat vacancy details of buses. 
      </meta>
      <property name="dateOfTravel" column="Date_Of_Travel" type="date"/>
      <property name="availableSeats" column="Available_Seats" type="int"/>

      <many-to-one name="trip" class="model.Trip" fetch="select">
            <column name="trip_Id" not-null="true" />
      </many-to-one>
      <many-to-one name="bus" class="model.Bus" fetch="select">
            <column name="bus_Id" not-null="true" />
      </many-to-one>
   </class>
</hibernate-mapping>