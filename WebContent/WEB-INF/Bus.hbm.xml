<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   
   <class name="model.Bus" table="Buses">
       <id name="id" type="int" column="Id" >
       <generator class="increment"/> 
       </id>
       <property name="registrationNumber" column="Registration_Number" type="string"/>
       <property name="type" column="Type" type="string"/>
       <property name="totalNumberOfSeats" column="Total_Number_Of_Seats" type="int"/>
       <property name="isAc" column="Is_AC" type="true/false"/>
       <many-to-one name="travels" class="model.Travels" fetch="select">
            <column name="Travels_Id" not-null="false" />
       </many-to-one>
       <many-to-one name="createdBy" class="model.User" fetch="select">
           <column name="Created_By" not-null="false" />
       </many-to-one>
       <many-to-one name="modifiedBy" class="model.User" fetch="select">
           <column name="Modified_By" not-null="false" />
       </many-to-one>
       <property name="createdAt" column="Created_At" type ="time" not-null="true"/>
       <property name="modifiedAt" column="Modified_At" type="time" not-null="false"/>
       <set name="trips" table="Trips" 
	    inverse="true" lazy="false" fetch="select" cascade="save-update">
            <key>
                <column name="Bus_Id" not-null="false" />
            </key>
            <one-to-many class="model.Trip" />
       </set>
  </class>
</hibernate-mapping>